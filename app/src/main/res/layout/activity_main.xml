<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#799C98"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/main_LBL_gross"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gross:"
                android:textColor="#DFD8D8"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/main_EDT_gross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="numberDecimal"
                android:shadowColor="@color/white"
                android:text="enter here"
                android:textSize="26sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#f7f2dd"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="32dp"
            android:paddingEnd="30dp"
            android:paddingBottom="32dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_net"
                app:backgroundTint="@null"
                android:background="#E949706C"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="net" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_education_fund"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:background="#E949706C"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/main_BTN_net"
                android:maxLines="2"
                android:text="education\nfund" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_social_security"
                android:layout_width="120dp"
                app:backgroundTint="@null"
                android:background="#E949706C"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_below="@id/main_BTN_net"
                android:layout_gravity="center"
                android:maxLines="2"
                android:text="social\nsecurity" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_income_tax"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:background="#E949706C"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_below="@id/main_BTN_education_fund"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/main_BTN_social_security"
                android:maxLines="2"
                android:text="income\ntax" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_health_tax"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:background="#E949706C"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_below="@id/main_BTN_social_security"
                android:layout_gravity="center"
                android:maxLines="2"
                android:text="health\ntax" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_BTN_pension"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:background="#E949706C"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_below="@id/main_BTN_income_tax"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/main_BTN_health_tax"
                android:text="pension" />


        </GridLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
           android:id="@+id/main_LBL_result"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:background="#799C98"
            android:text="Result:"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_LBL_submitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f2dd"
            android:text="Liri Lichow     206540759"
            android:textColor="@color/black"
            android:textSize="36sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>